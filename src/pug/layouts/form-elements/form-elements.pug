include ../../components/input/input
include ../../components/dropdown/dropdown
include ../../components/masked-text-field/masked-text-field
include ../../components/date-dropdown/date-dropdown
include ../../components/block-label/block-label
include ../../components/checkbox/checkbox
include ../../components/radio-button/radio-button
include ../../components/toggle-button/toggle-button
include ../../components/like-button/like-button
include ../../components/rating/rating
include ../../components/range-slider/range-slider
include ../../components/button/button
include ../../components/pagination/pagination
include ../../components/expandable-list/expandable-list
include ../../components/bullet-list/bullet-list
include ../../components/room-detail/room-detail
include ../../components/review/review


section.form-elements
	.form-elements__column
		.wrapper__mb_20
			+input('Text field')(type='email', placeholder='Email')
		.wrapper__mb_20
			+dropdown('Dropdown', {type: 'guests'})
		.wrapper__mb_20
			+dropdown('Dropdown', {type: 'facilities'})
		.wrapper__mb_20
			+masked-text-field('Masked text field')(type='text', placeholder='ДД.ММ.ГГГГ')
		.wrapper__mb_20
			+date-dropdown('Date dropdown', 'Date dropdown')
		.wrapper__mb_20
			+date-dropdown('Filter date dropdown', '', true)
		.wrapper__mb_20
			+input('Subscription text field', true)(type='email', placeholder='Email')
		.wrapper__mb_20
			+expandable-list('Expandable checkbox list')
				+checkbox('Завтрак')(name='dinner' id='dinner')
				+checkbox('Письменный стол')(name='desk' id='desk')
				+checkbox('Стул для кормления')(name='feeding-chair' id='feeding-chair')
				+checkbox('Кроватка')(name='crib' id='crib')
				+checkbox('Телевизор')(name='tv' id='tv')
				+checkbox('Шампунь')(name='shampoo' id='shampoo')
	.form-elements__column
		.wrapper__mb_40
			+block-label('Checkbox buttons')
			+checkbox('Можно курить')(name='can-smoke' id='can-smoke')
			+checkbox('Можно с питомцами')(checked name='with-pets' id='with-pets')
			+checkbox('Можно пригласить гостей (до 10 человек)')(checked name='with-guests' id='with-guests')
		.wrapper__mb_40
			+block-label('Radio buttons')
			+radio-button('Мужчина')(checked name='ui-kit-gender' id='ui-kit-male')
			+radio-button('Женщина')(name='ui-kit-gender' id='ui-kit-female')
		.wrapper__mb_40
			+block-label('Toggle')
			+toggle-button('Получать спецпредложения')(checked name='specials')
			+toggle-button('Получать спецпредложения')(name='specials')
		.wrapper__mb_40
			+block-label('Like button')
			+like-button({isLiked: false, counter: 2})
			+like-button({isLiked: true, counter: 12})
		.wrapper__mb_40
			+rating()
		.wrapper__mb_40
			+block-label('Rich checkbox buttons')
			+checkbox('Широкий коридор', 'Ширина коридоров в номере не менее 91 см.')(name='hallway' id='hallway')
			+checkbox('Помощник для инвалидов', 'На 1 этаже вас встретит специалист  и проводит до номера.')(name='assistant' id='assistant')
	.form-elements__column
		.wrapper__mb_40
			+range-slider('Range slider')
		.wrapper__mb_40
			+block-label('Buttons')
			+button('Click me', 'button__style_default', 'button')
			+button('Click me', 'button__style_ghost', 'button')
			+button('Click me', 'button__style_link', 'button')
			+button('Перейти к оплате', 'button__style_long', 'button')
		.wrapper__mb_40
			+block-label('Pagination')
			+pagination
		.wrapper__mb_40
			+bullet-list('Bullet list', ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00'])
	.form-elements__column
		.wrapper__mb_40
			+room-detail(require('@components/room-detail/room-detail-comfort.svg'), 'Комфорт', 'Шумопоглощающие стены')
			+room-detail(require('@components/room-detail/room-detail-convenience.svg'), 'Удобство', 'Окно в каждой из спален')
	.form-elements__column.form-elements__column_long
		.wrapper__mb_40
			+review(require('@components/review/image-1.jpg'), 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.')
			
	